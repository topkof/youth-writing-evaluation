# 后端配置
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/youth_writing
REDIS_HOST=localhost
REDIS_PORT=6379

# 安全配置
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# OSS 配置（可选）
OSS_ENABLED=false
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=
OSS_ENDPOINT=

# 文件上传限制
MAX_FILE_SIZE=10485760
MAX_ZIP_FILES=100
MAX_ZIP_DEPTH=3
MAX_UNZIP_SIZE=524288000

# LLM 配置
LLM_DEFAULT_MODEL=gpt-4-turbo
LLM_DEFAULT_TEMPERATURE=0.3
LLM_MAX_TOKENS=4096
LLM_CONTEXT_LIMIT=128000
