# ============================================
# 青少年写作质量评测系统 - 环境变量配置
# ============================================

# ============================================
# 数据库配置
# ============================================
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@postgres:5432/youth_writing

# ============================================
# Redis 配置
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# 安全配置
# ============================================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ============================================
# OSS 配置（可选）
# ============================================
OSS_ENABLED=false
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=
OSS_ENDPOINT=

# ============================================
# 文件上传限制
# ============================================
MAX_FILE_SIZE=10485760
MAX_ZIP_FILES=100
MAX_ZIP_DEPTH=3
MAX_UNZIP_SIZE=524288000

# ============================================
# LLM 配置
# ============================================
LLM_DEFAULT_MODEL=gpt-4-turbo
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# 前端配置
# ============================================
API_URL=http://backend:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# 时区配置
# ============================================
TZ=Asia/Shanghai
